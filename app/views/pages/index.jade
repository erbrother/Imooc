extend ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            a(href='/results?cat=#{cat._id}&p=1') #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('https:') > -1
                        img(src="#{item.poster}", alt="#{item.title}", height="300")
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}", height="300")
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}", role="button")  观看预告片