extend ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            th 密码
            th 注册时间
            th 权限
            th 删除
        tbody
          each item in users  
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{item.password}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td #{item.role}
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
